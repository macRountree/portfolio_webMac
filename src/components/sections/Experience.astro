---
import  Section  from '../Section.astro'
import {work} from '@/resume.json'
---
<Section title="Experience">
    <ul>
        {work.map(({name,startDate,endDate,position,summary,projectUrl,projectName}) => {

            const startYear = new Date(startDate).getFullYear()
            const endYear = endDate !== null ? new Date(endDate).getFullYear() : 'present'
            const years = `${startYear} - ${endYear}` 
            const project = projectUrl && projectName !== null ? '' : `${projectName} - ${projectUrl}`
            return (
            <li>
                <article>
                    <header>
                        <div>
                            <h3>{name}</h3>
                            <h4>{position}</h4>
                            {projectUrl && projectName ? (
                                    <h4>
                                    Projects: 
                                    <a href={projectUrl}>{projectName}</a>
                                    </h4>
                                ) : null}

                        </div>
                        <time >{years}</time>
                    </header>
                    <footer>

                    </footer>

                <p>{summary}</p>
                </article>
           
            </li>
            )
        } 
            
        )}
    </ul>
</Section>

<style>
    header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 4px;
    }

    header a {
        color: #221fbf;
        font-size: 1rem;
        font-weight: 500;
        text-decoration: none;
    }

ul{
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

article h3{
    color: #111;
    font-weight: 700;
}
article h4{
    color: #222;
    font-weight: 500;
    margin: .2rem auto;
}
time{
    color: #555;
    font-weight:bold;
    font-size: 0.85rem;
}

</style>